@model GuildCars.Models.HomeViewModel
@{
    ViewBag.Title = "Specials";
}
<head>
    <style>
      .row {
        border: 1px solid;
      }

      .row + .row {
        border-top:.5px solid ;
      }
    </style>
</head>

<h2>Specials</h2>

<div class="container"> 
    
        @foreach (var special in Model.specials)
        {
            <div class="row">
                <div class="col-md-2"><h1><strong>$</strong></h1></div>
                <div class="col-md-10"><h4>@special.SpecialName</h4><p>@special.SpecialDetails</p></div>
            </div>
        }
            

</div>
