@model Exercises.Models.ViewModels.StudentVM

@{
    ViewBag.Title = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-3">
            @Html.Partial("StudentNav")
        </div>
        <div class="col-m-6">
            <div class="row">
                <div class="col-md-6">
                    <h3>Edit Student</h3>
                    <div class="row">
                        @using (Html.BeginForm())
                        {
                            @Html.HiddenFor(s => s.Student.StudentId)
                            <div class="col-md-6 co">
                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">Personal Details</h4>
                                    </div>
                                    <div class="panel-body">
                                        <div class="form-group">
                                            <label>First Name:</label>
                                            @Html.TextBoxFor(m => m.Student.FirstName, new { @class = "form-control" })
                                            <span class="text-danger">@Html.ValidationMessageFor(s => s.Student.FirstName)</span>

                                        </div>
                                        <div class="form-group">
                                            <label>Last Name:</label>
                                            @Html.TextBoxFor(m => m.Student.LastName, new { @class = "form-control" })
                                            <span class="text-danger">@Html.ValidationMessageFor(s => s.Student.LastName)</span>

                                        </div>
                                        <div class="form-group">
                                            <label>Major:</label>
                                            @Html.DropDownListFor(m => m.Student.Major.MajorId, Model.MajorItems, "-Choose One-", new { @class = "form-control" })
                                            <span class="text-danger">@Html.ValidationMessageFor(s => s.Student.Major.MajorId)</span>

                                        </div>
                                        <div class="form-group">
                                            <label>GPA:</label>
                                            @Html.TextBoxFor(m => m.Student.GPA, new { @class = "form-control" })
                                            <span class="text-danger">@Html.ValidationMessageFor(s => s.Student.GPA)</span>
                                        </div>
                                        <h4>Courses</h4>
                                        <div class="form-group">
                                            @Html.ListBoxFor(m => m.SelectedCourseIds, Model.CourseItems, new { @class = "form-control" })
                                        </div>
                                        <hr />
                                        <div class="form-group">
                                            <label>Address 1</label>
                                            @Html.TextBoxFor(a => a.Student.Address.Street1, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label>Address 2</label>
                                            @Html.TextBoxFor(a => a.Student.Address.Street2, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label>City</label>
                                            @Html.TextBoxFor(a => a.Student.Address.City, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label>Postal Code</label>
                                            @Html.TextBoxFor(a => a.Student.Address.PostalCode, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label>State</label>
                                            @Html.TextBoxFor(a => a.Student.Address.State, new { @class = "form-control" })
                                            <span class="text-danger">@Html.ValidationMessageFor(s => s.Student.Address.State.StateAbbreviation)</span>
                                            @* this one doesn't work *@
                                        </div>
                                        @*ListBoxFor with a MultiSelectList will be used*@
                                        <button class="btn btn-primary">Save</button>
                                        @Html.ActionLink("Cancel", "List", "Student", null, new { @class = "btn btn-sm btn-info" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">Personal Details</h4>
                                    </div>
                                    <div class="panel-body">

                                        <div class="form-group">
                                            <label>Address 1</label>
                                            @Html.TextBoxFor(a => a.Student.Address.Street1, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label>Address 2</label>
                                            @Html.TextBoxFor(a => a.Student.Address.Street2, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label>City</label>
                                            @Html.TextBoxFor(a => a.Student.Address.City, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label>Postal Code</label>
                                            @Html.TextBoxFor(a => a.Student.Address.PostalCode, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label>State</label>
                                            @Html.TextBoxFor(a => a.Student.Address.State, new { @class = "form-control" })
                                            <span class="text-danger">@Html.ValidationMessageFor(s => s.Student.Address.State.StateAbbreviation)</span>
                                            @* this one doesn't work *@





                                        </div>
                                        @*ListBoxFor with a MultiSelectList will be used*@


                                        @*<button class="btn btn-primary">Save</button>
                                        @Html.ActionLink("Cancel", "List", "Student", null, new { @class = "btn btn-sm btn-info" })


                                        <hr />

                                        @Html.TextBoxFor(c => c.SelectedCourseIds, new { @class = "form-control" })*@
                                    </div>
                                </div>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
